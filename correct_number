// 랜덤 숫자 맞추기 프로그램입니다.

import java.util.*; // Scanner 입력을 위한 import

public class FlowEx {
    public static void main(String[] args) {
        int input = 0, answer = 0;  // 입력받을 숫자와 정답인 숫자 변수 선언
        int attempt = 0; // ++ 기능 추가 시도한 횟수까지 표기하기 위한 변수 선언
        answer = (int)(Math.random() * 100) + 1; // (Math.random() * 100)+1 -> 1~100까지 랜덤 숫자 저장
        Scanner scanner = new Scanner(System.in);

        do {
            System.out.print("1과 100사이의 정수를 입력하세요.>");
            input = scanner.nextInt();
            attempt++; // 시도횟수 카운팅
            if(input > answer) {
                System.out.println("더 작은 수로 다시 시도해보세요.");
            } else if(input < answer) {
                System.out.println("더 큰 수로 다시 시도해보세요.");
            }
        } while(input!=answer);
        System.out.println("정답입니다.");
        System.out.println("attempt = " + attempt); //시도 횟수
    }
}
